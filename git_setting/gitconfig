[alias]
  sh  = switch
  co  = checkout
  st  = status
  stt = status --short --branch
  ad = add
  cm = commit
  fh = fetch
  df = diff
  ps = push
  op = open
  l = log
  unstage = reset HEAD
  del = branch -D
  rename = branch -m
  rsync = "!git fetch upstream $(git rev-parse --abbrev-ref HEAD) && git reset --hard FETCH_HEAD"
  osync = "!git fetch origin $(git rev-parse --abbrev-ref HEAD) && git reset --hard FETCH_HEAD"
  # master/develop/release以外のマージ済みブランチを削除する
  dd = "!git fetch --all && git branch --merged | grep -vE 'master|develop|release' | xargs -I % git branch -d %"
[core]
  excludesfile = ~/.gitignore_global
